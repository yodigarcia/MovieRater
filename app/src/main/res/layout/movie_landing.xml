<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MovieLanding"
                android:id="@id/addLanding"
>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="You have not added a movie"
              android:textSize="18sp"
              android:layout_centerInParent="true"
              android:id="@+id/addLanding"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Long press me to add a movie"
              android:textSize="18sp"
              android:layout_below="@id/addLanding"
              android:layout_alignStart="@id/addLanding"
    />
</RelativeLayout>